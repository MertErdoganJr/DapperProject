@model List<DapperProject.Dtos.ResultProjectDto>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image URL</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProjectID</td>
                <td>@item.ProjectTitle</td>
                <td>@item.ProjectDescription</td>
                <td>@item.ProjectImageUrl</td>
                <td><a href="/Default/DeleteProject/@item.ProjectID" class="btn btn-danger">Delete</a></td>
                <td><a href="/Default/UpdateProject/@item.ProjectID" class="btn btn-success">Update</a></td>
            </tr>
        }
    </table>
    <a href="/Default/CreateProject/" class="btn btn-primary">Create New Project</a>
</div>